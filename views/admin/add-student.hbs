  <div class="main-content">
    <!-- Top navbar -->
    <nav class="navbar navbar-top navbar-expand-md navbar-dark" id="navbar-main">
      <div class="container-fluid">
        
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        <div class="col-xl-12">
          <div class="card bg-light shadow">
            <div class="card-header bg-white border-0">
              <div class="row align-items-center">
                <div class="col-12 d-flex justify-content-center">
                  <h3 class="text-center mb-0">ADD NEW STUDENT</h3>
                </div>
              </div>
            </div>
            
            <div class="card-body">
                <div class="row justify-content-center">
              <div class="col-lg-12 d-flex justify-content-center">
                <div class="card-profile-image co">
                  
                    <img id="imageview"  style="height: 45mm; width: 35mm;" src="/images/students-images/user.png">
                    
                </div>

              </div>
            </div>
              <form id="add-student-form" enctype="multipart/form-data">
              <div class="row d-flex justify-content-center">
                  <div class=" m-1 d-flex justify-content-center col-lg-12">
                      <input id="stdImg" onchange="viewImage(event)" required type="file" class="btn btn-secondary" name="StudentImage" > 
                  </div>
                  <div class=" d-flex justify-content-center col-lg-12">
                      <small class="form-text text-muted"><b>Upload dimension:</b> W: 35mm, H: 45mm</small>
                  </div>
              </div>
              
                <h6 class="heading-small text-muted mb-4">Personal information</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-username">Admission no</label>
                        <input required name="AdmissionNo" id="input required-username" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group">
                        <label class="form-control-label" for="input required-email">Full name</label>
                        <input required name="Name"  type="text" id="input required-email" class="form-control form-control-alternative" >
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-first-name">Date of birth</label>
                        <input required name="Dob"  type="date" id="input required-first-name" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group focused">
                        <label for="">Current class</label>
                        <select required class="form-control" name="Class">
                            <option selected disabled>Select class</option>
                            <option value="UG 1">UG 1</option>
                            <option value="UG 2">UG 2</option>
                            <option value="UG 3">UG 3</option>
                            <option value="BS 4">BS 4</option>
                            <option value="BS 5">BS 5</option>
                            <option value="PG 1">PG 1</option>
                            <option value="PG 2">PG 2</option>
                        </select>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-last-name">Blood group</label>
                        <input name="BloodGroup"  id="input required-last-name" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                  </div>
                </div>
                <hr class="my-4">
                <!-- Address -->
                <h6 class="heading-small text-muted mb-4">Contact information</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-address">Address</label>
                        <textarea required name="Address" id="input required-address" class="form-control form-control-alternative"></textarea>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-4">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-city">State</label>
                        <input required name="State" type="text" id="input required-city" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-country">Country</label>
                        <input required name="Country" type="text" id="input required-country" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="form-group">
                        <label class="form-control-label" for="input required-country">Postal code</label>
                        <input required name="Pincode"  id="input required-postal-code" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-city">Mobile</label>
                        <input required name="Mobile" type="tel" id="input required-city" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-country">Email</label>
                        <input name="Email" type="email" id="input required-country" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                  </div>
                </div>
                <hr class="my-4">
                <!-- Guardian's Details -->
                <h6 class="heading-small text-muted mb-4">Guardian's information</h6>
                <div class="pl-lg-4">
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-city">Full name</label>
                        <input required name="Gname" type="text" id="input required-city" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-country">Occupation</label>
                        <input required name="Goccupation" type="text" id="input required-country" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-city">Mobile</label>
                        <input required name="Gmobile" type="tel" id="input required-city" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                    <div class="col-lg-6">
                      <div class="form-group focused">
                        <label class="form-control-label" for="input required-country">Email</label>
                        <input  name="Gemail" type="email" id="input required-country" class="form-control form-control-alternative"  >
                      </div>
                    </div>
                  </div>
                </div>
                
                <div class="row d-flex justify-content-center">
                     <button type="submit" class="btn btn-success ">Add</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>